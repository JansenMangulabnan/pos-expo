{{> header}}

{{#if history}}
<div class="order-container">
    <h1>Order Receipt</h1>
    <div class="order-details">
        <p><strong>Order ID:</strong> {{history.history_id}}</p>
        <p><strong>Product Name:</strong> {{history.history_product_name}}</p>
        <p><strong>Quantity:</strong> {{history.history_order_quantity}}</p>
        <p><strong>Total Price:</strong> ${{history.history_product_price}}</p>
        <p><strong>Order Date:</strong> {{history.history_order_date}}</p>
        <p><strong>Shop:</strong> {{history.shop_name}}</p>
        <p><strong>Seller:</strong> {{history.seller_name}}</p>
        
    </div>
    <div class="order-footer">
        Thank you for your purchase! You may no pick up our order at the shop.
    </div>
</div>
{{else}}
<div class="order-container">
    <h1>Order Not Found</h1>
    <p>We couldn't find the order details. Please check the order ID and try again.</p>
</div>
{{/if}}