{{> header}}

<div class="cart-container">
    {{!-- <button class="debug">debug</button> --}}
    <div class="cart-main">
        <!-- Product List Section -->
        <div class="cart-product-list">
            <h2>Your Cart</h2>
            <div class="cart-product-grid">
                {{#each cart}}
                <div class="cart-product-card" data-id="{{product_id}}">
                    <div class="img-display">
                        <img src="{{product_img}}" alt="{{product_name}}" class="product-img" />
                    </div>
                    <div class="cart-product-info">
                        <h3 class="cart-product-name">{{product_name}}</h3>
                        <p class="cart-product-price">₱{{product_price}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <!-- Checkout Section -->
        <div class="cart-checkout-section">
            <h2>Checkout</h2>
            <div class="cart-checkout-table-wrapper">
                <table class="cart-checkout-table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Qty</th>
                            <th>Price</th>
                            <th>Total</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="cart-checkout-items"></tbody>
                </table>
            </div>
            <div class="cart-checkout-summary">
                <div class="summary-row total">
                    <span>Total:</span>
                    <span>₱<span id="cart-checkout-total">0.00</span></span>
                </div>
                <button id="order-checkout-btn" class="checkout-btn">Proceed to Checkout</button>
            </div>
        </div>
    </div>
</div>